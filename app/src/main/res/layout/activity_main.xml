<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/layout_top"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <com.google.android.material.textfield.TextInputLayout

                android:layout_centerVertical="true"
                android:layout_marginHorizontal="20dp"
                android:hint="Search name, city, category"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_search"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <ImageView
                android:id="@+id/btn_search"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_search_24"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </RelativeLayout>
        <HorizontalScrollView

            android:layout_below="@+id/layout_top"
            android:id="@+id/filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginVertical="16dp"
            android:layout_marginStart="25dp">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/filter_button_1"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:button="@null"
                    android:paddingHorizontal="18dp"
                    android:text="Populer"
                    android:fontFamily="@font/proximanova"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"
                    android:checked="true"
                    android:textColor="@color/radio_text_selector"
                    android:background="@drawable/history_button_dft"
                    />
                <RadioButton
                    android:id="@+id/filter_button_2"
                    android:layout_width="wrap_content"
                    android:button="@null"
                    android:textColor="@color/radio_text_selector"
                    android:paddingHorizontal="18dp"
                    android:fontFamily="@font/proximanova"
                    android:textSize="14sp"
                    android:text="Rating"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/history_button_dft"
                    android:layout_height="32dp"/>
                <RadioButton
                    android:id="@+id/filter_button_3"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:button="@null"
                    android:textColor="@color/radio_text_selector"
                    android:fontFamily="@font/proximanova"
                    android:paddingHorizontal="18dp"
                    android:textSize="14sp"
                    android:text="Terdekat"
                    android:background="@drawable/history_button_dft"
                    android:layout_height="32dp"/>
            </RadioGroup>

        </HorizontalScrollView>
        <androidx.recyclerview.widget.RecyclerView
            android:background="@color/background"
            android:id="@+id/recyclerview"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>